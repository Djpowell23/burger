{{!-- Photo of Burger goes here --}}
<img src='./assets/images/burger.png' alt='burger-img' style='width: 320px; height: 260px;'>
<h1>Eat-Da-Burger!</h1>


<div class='container'>
  <div class='row'>
    <div class='col-md-6'>
      <ul style="list-style-type:none;">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class='col-md-6'>
      <ul style="list-style-type:none;">
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<form class='create-form'>
  <div class="form-group">
    <label for="ca">Burger Name:</label><br>
    <input type="text" id="ca" name="name">
  </div>

  <button class='sub' type="submit">Add Burger</button>
</form>

<h5>Enter a burger to eat and click the Submit Button</h5>